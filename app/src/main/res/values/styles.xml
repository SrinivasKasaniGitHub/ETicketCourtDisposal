    </style>


    <style name="IP_TextView" style="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#03044b</item>
        <item name="android:textSize">@dimen/IP_Set_EdtTxtsize</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">6</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Logo_Style">
        <item name="android:layout_width">@dimen/logo_size</item>
        <item name="android:layout_height">@dimen/logo_size</item>
    </style>

    <style name="layt_style" parent="Theme.AppCompat.Light">
        <item name="contentPaddingLeft">@dimen/lyt_padding_LR</item>
        <item name="contentPaddingRight">@dimen/lyt_padding_LR</item>


    </style>


    <style name="Divider">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Divider_invisible">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>





    <style name="TextColor">
        <item name="android:textColor">#0c1931</item>
    </style>

    <style name="styleTxtVw_CTMRowAdapter" style="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#03044b</item>
        <item name="android:textSize">@dimen/DD_MOB_ADHAR_FONT</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="styleTxtVw_CTMRowAdapter1" style="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#01037b</item>
        <item name="android:textSize">@dimen/DD_MOB_ADHAR_FONT</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>








    <!-- LINKED WITH LOGIN BUTTON STYLE -->
    <style name="text_style">
        <item name="android:textSize">@dimen/header_text_size</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- FOR HEADER_BG TEXT HYD TRFC POLICE -->
    <style name="header_text_style" parent="text_style">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cust_text_style" parent="text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="navi_text_style" parent="text_style">
        <item name="android:textColor">@color/navi_color</item>
    </style>

    <!-- FOR HEADER_BG -->
    <style name="header_style">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/header_grdnt</item>
    </style>
    <!-- HEADER SIDE IMAGES LOGO -->
    <style name="header_images_style_left">
        <item name="android:layout_width">@dimen/header_icon_size</item>
        <item name="android:layout_height">@dimen/header_icon_size</item>
        <item name="android:src">@drawable/htp_left</item>
    </style>

    <!-- HEADER SIDE IMAGES LOGO RIGHT -->
    <style name="header_images_style_right" parent="header_images_style_left">
        <item name="android:src">@drawable/hcp_right</item>
    </style>

    <!-- FOR LOGIN EDITTEXT STYLE -->
    <style name="edt_custom_style">
        <item name="android:background">@drawable/transbg_style</item>
        <item name="android:textColorHint">#585858</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">25dp</item>
    </style>

    <!-- FOR SETTINGS ET_STYLE -->
    <style name="edt_custom_settings_style" parent="edt_custom_style">
        <item name="android:background">@drawable/transbg_white_style</item>
    </style>

    <!-- FOR LOGIN BUTTON STYLE -->
    <style name="green_custom_style" parent="text_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/login_blue_btn_style</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="orange_custom_style" parent="green_custom_style">
        <item name="android:background">@drawable/login_orange_btn_style</item>
    </style>

    <style name="naviblue_custom_style" parent="green_custom_style">
        <item name="android:background">@drawable/navi_blue_btn_style</item>
    </style>

    <!-- DRUNK & DRIVE TEXT STYLE -->
    <!-- FOR HEADER_BG TEXT HYD TRFC POLICE -->
    <style name="drunkdrive_text_style" parent="text_style">
        <item name="android:textSize">16dp</item>
    </style>

    <!-- DRUN AND DRIVE BLUE BTN STYLE -->
    <style name="dd_custom_blue_btn_style">
        <item name="android:background">@drawable/drun_drive_btn_style_blue</item>
        <item name="android:drawableRight">@drawable/down</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/navi_color</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- DRUN AND DRIVE BLUE BTN STYLE WITHOUT DOWN ARROW -->
    <style name="custom_blue_btn_style" parent="dd_custom_blue_btn_style">
        <item name="android:drawableRight">@null</item>
    </style>

    <!-- DRUN AND DRIVE RADIO BTN STYLE -->
    <style name="dd_custom_radio_btn_style">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/navi_color</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="dd_custom_radio_btn_style_isDriver_isOwner" parent="dd_custom_radio_btn_style">
        <item name="android:textSize">22dp</item>
    </style>

    <!-- DRUN AND DRIVE CHECK BOX BTN STYLE -->
    <style name="dd_custom_check_box_style" parent="dd_custom_radio_btn_style">
        <item name="android:button">@drawable/custom_chec_box</item>
        <item name="android:paddingLeft">@dimen/header_grnt_padding_ten</item>
    </style>

    <!-- FOOTER STYLE -->
    <style name="footer_style">
        <item name="android:drawableRight">@drawable/mptvlogo</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/footer_txt</item>
        <item name="android:background">#365285</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/header_grnt_padding_ten</item>
    </style>

    <!-- DASHBOARD MARGINS STYLE TOP AND BOTTOM -->
    <style name="margin_top_btm_style">
        <item name="android:layout_marginTop">@dimen/header_grnt_padding_ten</item>
        <item name="android:layout_marginBottom">@dimen/header_grnt_padding_ten</item>
    </style>



    <style name="TransparentProgressDialogWithPngImage">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item   name="android:windowAnimationStyle">  @android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

</resources>